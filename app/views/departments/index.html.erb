<div class="department index">
  <%= link_to("<< Back to Schools", schools_path) %>
  <div id= "showname">
    <p class="center"><%= @school.name %></p>
  </div>
  </table>
  <h2>Departments</h2>
  <%= image_tag('plus.png', :size => '12x12', :alt => '+') %>
  <%= link_to("Add New Departments", new_department_path(school_id: @school.id)) %>
  <br /><br />
  <table class="listing" summary="Department List">
    <tr class="header">
      <th>Serial No.</th>
      <th class="center">Department Name</th>
      <th class="center">Description</th>
      <th class="center">Head Name</th>
      <th class="center">Capacity</th>
      <th class="center">Actions</th>
    </tr>
    <% @departments.each do |department| %>
        <tr>
          <td><%= department.position %></td>
          <td><%= department.name %></td>
          <td><%= department.description %></td>
          <td><%= department.head_name %></td>
          <td><%= department.capacity %></td>
          <td class="actions">
            <%= link_to("Show", department_path(department, :school_id => @school.id)) %>
            <%= link_to("Edit", edit_department_path(department, :school_id => @school.id)) %>
            <%= link_to("Delete", delete_department_path(department, :school_id => @school.id)) %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
