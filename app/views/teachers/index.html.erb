<div class="teacher index">
  <%= link_to t('shared.all.dept_back'), departments_path(school_id: @department.school_id) %>
  <div id= "showname">
    <p class="center"><%= t('departments.all.dept_of')%><%= @department.name %></p>
  </div>
  </table>
  <h2><%=t('teachers.all.tch')%></h2>
  <%= image_tag('plus.png', size: '12x12', alt: '+') %>
  <%= link_to t('teachers.all.tch_add'), new_teacher_path(department_id: @department.id) %>
  <br /><br />
  <table class="listing" summary="Teacher List">
    <tr class="header">
      <th class="center"><%=t('teachers.all.tch_ID')%></th>
      <th class="center"><%=t('teachers.all.tch_name')%></th>
      <th class="center"><%=t('teachers.all.tch_email')%></th>
      <th class="center"><%=t('teachers.all.tch_contact')%></th>
      <th class="center"><%=t('teachers.all.tch_desig')%></th>
      <th class="center"><%=t('shared.all.actions')%></th>
    </tr>
    <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.teacher_id %></td>
          <td><%= teacher.teacher_name %></td>
          <td><%= teacher.Email %></td>
          <td><%= teacher.Contact %></td>
          <td><%= teacher.Designation %></td>
          <td class="actions">
            <%= link_to t('shared.all.show'), teacher_path(teacher, department_id: @department.id) %>
            <%= link_to t('shared.all.edit'), edit_teacher_path(teacher, department_id: @department.id) %>
            <%= link_to t('shared.all.delete'), delete_teacher_path(teacher, department_id: @department.id) %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
